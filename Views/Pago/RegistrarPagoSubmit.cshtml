@model IEnumerable<HeladeriaTAMS.Models.Producto>
@{
    ViewData["Title"] = "Pago Registrado";
}


 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
</head>
<body >

 <br />
<h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color:black; background-color: #FFBCA7; text-align: center;">DETALLE DEL PAGO</h1> 

    <nav class="navbar" style="background-color: #e3f2fd";>
  <div class="container-fluid">
    <a class="navbar-brand" href="/Home/Index">
   <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-emoji-smile" viewBox="0 0 16 16">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="M4.285 9.567a.5.5 0 0 1 .683.183A3.498 3.498 0 0 0 8 11.5a3.498 3.498 0 0 0 3.032-1.75.5.5 0 1 1 .866.5A4.498 4.498 0 0 1 8 12.5a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .183-.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z"/>
</svg>
     SE COMPLETO EL PAGO EXITOSAMENTE, GRACIAS POR COMPRAR EN HELADERIA TAMS
    </a>
  </div>

</nav>
<h2 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color:black;  text-align: center;">PRODUCTOS QUE FUERON COMPRADOS </h2> 

<div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="375" height="250"
                       src="/images/@item.ImageName" alt="@item.ImageName"  />
                  </div>
                </div>
                <div class="card-body" style="text-align: center;">
                  <h4 class="card-title" >@Html.DisplayFor(modelItem => item.Name)</h4>
                  <h5 class="card-text" style="color:#FF0000" >@Html.DisplayFor(modelItem => item.Precio)</h5>
                  
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>