@model HeladeriaTAMS.Models.Contacto;

@{
    
}
<h1>@ViewData["Title"]</h1>
<div  class="contactBody"  style="background-color: whitesmoke">
<head>
 <link rel="stylesheet"   href="~/css/style.css" asp-append-version="true"  />
 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
 
        <link rel="stylesheet" href="../main.css">
</head>

<div  class="contactBody"  style="background-color: whitesmoke">
    <div class="wrapper">
    <h1 class="display-4" class="topBefore">Contactenos</h1>

    <form asp-controller="Contacto" asp-action="Create" class="topBefore">

<div class="col-sm-8 col-sm-offset-2">
    <div class="mb-3 row">
      <strong><label asp-for="Name" class="form-label" style="font-size: 30px; font-weight: bold"></label> </strong>
      <div class="col-sm-10">
        <input asp-for="Name" class="form-control form-control-sm"  style="font-size: 20px" type="text" placeholder="Escribe tu nombre"  />

      </div>
    </div>
 </div>
<br />
        

<div class="col-sm-8 col-sm-offset-2">
    <div class="mb-3 row">
      <strong> <label asp-for="Email" class="control-label"  style="font-size: 30px; font-weight: bold"   ></label> </strong>
      <div class="col-sm-10">
        <input asp-for="Email" class="form-control" style="font-size: 20px"  type="text" placeholder="Escribe tu nombre"   />
      </div>
    </div>
 </div>
<br />

<div class="col-sm-8 col-sm-offset-2">
    <div class="mb-3 row">
      <strong> <label asp-for="Subject" class="control-label"  style="font-size: 30px; font-weight: bold"   ></label> </strong>
      <div class="col-sm-10">
        <input asp-for="Subject" class="form-control" style="font-size: 20px"  type="text" placeholder="Escribe tu nombre"   />
      </div>
    </div>
 </div>
<br />        
  

 <div class="col-sm-8 col-sm-offset-2">
    <div class="mb-3 row">
      <strong> <label asp-for="Comment" class="control-label"  style="font-size: 30px; font-weight: bold"   ></label> </strong>
      <div class="col-sm-10">
        <input asp-for="Comment" class="form-control" style="font-size: 20px"  type="text" placeholder="Escribe tu nombre"   />
      </div>
    </div>
 </div>
<br />        
        

        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="size: 30px">Enviar</button> 
        </div>              
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>
    </div>
</div>