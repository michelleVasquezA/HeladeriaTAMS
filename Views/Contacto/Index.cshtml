@model HeladeriaTAMS.Models.Contacto;

@{
    ViewData["Title"] = "Contacto";
}
<h1>@ViewData["Title"]</h1>
<div  class="contactBody" >
<head>
 <link rel="stylesheet"   href="~/css/style.css" asp-append-version="true"  />
 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
       


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
 
        <link rel="stylesheet" href="../main.css">
</head>

<div  class="contactBody" >
    <div class="wrapper">
    <h1 class="display-4" class="topBefore" >
    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-chat-right-text" viewBox="0 0 16 16">
      <path d="M2 1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h9.586a2 2 0 0 1 1.414.586l2 2V2a1 1 0 0 0-1-1H2zm12-1a2 2 0 0 1 2 2v12.793a.5.5 0 0 1-.854.353l-2.853-2.853a1 1 0 0 0-.707-.293H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12z"/>
      <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
    </svg>
Contactenos</h1>

    <form asp-controller="Contacto" asp-action="Create" class="topBefore">

<div class="col-sm-8 col-sm-offset-2">
    <div class="mb-3 row">
      <strong><label asp-for="Name" class="form-label" style="font-size: 30px; font-weight: bold"></label> </strong>
      <div class="col-sm-10">
        <input asp-for="Name" class="form-control form-control-sm"  style="font-size: 20px" type="text" placeholder="Escribe tu nombre"  />

      </div>
    </div>
 </div>
<br />
        

<div class="col-sm-8 col-sm-offset-2">
    <div class="mb-3 row">
      <strong> <label asp-for="Email" class="control-label"  style="font-size: 30px; font-weight: bold"   ></label> </strong>
      <div class="col-sm-10">
        <input asp-for="Email" class="form-control" style="font-size: 20px"  type="text" placeholder="Escribe tu email"   />
      </div>
    </div>
 </div>
<br />

<div class="col-sm-8 col-sm-offset-2">
    <div class="mb-3 row">
      <strong> <label asp-for="Subject" class="control-label"  style="font-size: 30px; font-weight: bold"   ></label> </strong>
      <div class="col-sm-10">
        <input asp-for="Subject" class="form-control" style="font-size: 20px"  type="text" placeholder="Escribe la tematica"   />
      </div>
    </div>
 </div>
<br />        
  

 <div class="col-sm-8 col-sm-offset-2">
    <div class="mb-3 row">
      <strong> <label asp-for="Comment" class="control-label"  style="font-size: 30px; font-weight: bold"   ></label> </strong>
      <div class="col-sm-10">
        <input asp-for="Comment" class="form-control" style="font-size: 20px"  type="text" placeholder="Escribe tu comentario"   />
      </div>
    </div>
 </div>
<br />        
        

        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="size: 30px">Enviar</button> 
        </div>              
    </form>
    <h1>@ViewData["Message"]</h1>


</div>
    </div>
</div>