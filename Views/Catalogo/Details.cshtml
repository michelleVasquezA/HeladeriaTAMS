@model HeladeriaTAMS.Models.Producto

<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detalles</title>
</head>

<body>
  @{
    ViewData["Title"] = "Detalles del Producto";
  }
  <h2  style="margin: 2rem auto 2rem auto; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">Detalles del Producto</h2>

  <div class="container" style="margin-bottom: 3rem;">
    <div class="row">
      <div class="col-sm-5">
        <div class="card" style="border-radius: 20px; height: 420px;">
          <div class="card-body" style="margin: auto auto;">
            <div class="card-img-actions">
              <img class="img-responsive" width="375" height="375"
                src="/images/@Html.DisplayFor(model => model.ImageName)"
                alt="@Html.DisplayFor(model => model.ImageName)" style="border-radius: 20px;" />
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-7">
        <div class="card" style="border-radius: 20px; padding: 1rem 1rem; height: 420px;">
          <div class="card-body">
            <h1 class="card-title">@Html.DisplayFor(model => model.Name)</h1><br>
            <h5>Descripción:</h5>
            <p class="card-text">@Html.DisplayFor(model => model.Descripcion)</p>
            <h5>Precio del Producto:</h5>
            <p class="card-title" 0>S/. @Html.DisplayFor(model => model.Precio)</p>
            <h5>Stock:</h5>
            <p>Disponible</p><br>
            <div class="d-grid gap-2">
              <a class="btn" asp-action="Add" asp-route-id="@Model.Id"
                style="background-color: #FFBCA7;"><strong>Añadir al Carrito <i
                    class="fa-sharp fa-solid fa-cart-shopping"></i></strong></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<script src="https://kit.fontawesome.com/42be4397d3.js" crossorigin="anonymous"></script>

</html>