@model IEnumerable<HeladeriaTAMS.Models.Producto>
@{
  ViewData["Title"] = "Catalogo";
}

<div class="container" style="margin: 2rem auto;">
  <h1>@ViewData["Message"]</h1>
  <div class="row">
    <div class="col">
      <div id="products" class="mb-3">
        <div class="row">
          @foreach (var item in Model)
          {
            <div class="col-sm-4">
              <div class="card mb-3 text-center" style="border: white 4px solid; border-radius: 30px;">
                <div class="card-header"
                style="background-color: #E38B29; border-bottom: white 4px solid; border-radius: 30px 30px 0px 0px;">
                  <p style="margin: 5px 0; font-family: 'Rajdhani', sans-serif; font-size: 24px; font-weight: bold; 
                  color: white;">@Html.DisplayFor(modelItem => item.Name)</p>
                </div>
                <div class="card-body" style="background-color: #FFD8A9;">
                  <img class="img-responsive" style="border-radius: 30px; margin-top: 5px; background-size: cover;"
                  width="350" height="250" src="/images/@item.ImageName" alt="@item.ImageName" />
                  <p class="card-text" style="margin-top: 15px; font-family: 'Rajdhani', sans-serif; font-size: 20px; font-weight: bold; 
                  color: #ffa500;">Precio: S/. @Html.DisplayFor(modelItem => item.Precio)</p>
                </div>
                <div class="card-footer text-muted"
                style="background-color: #F3E0B5; border-top: white 4px solid;  border-radius: 0px 0px 30px 30px;">
                  <div class="btn-group" role="group" aria-label="Basic example" style="width: 100%; padding-bottom: 5px;">
                    <a class="btn" style="border-radius: 30px 0px 0px 30px; border: white 4px; border-style: solid none solid solid; background-color: #FFAE6D; font-family: 'Rajdhani', sans-serif; font-size: 20px; font-weight: bold; 
                  color: white; margin-top: 5px;" asp-action="Add" asp-route-id="@item.Id">Comprar</a>
                    <a class="btn" style="border-radius: 0px 30px 30px 0px; border: white 4px solid; background-color: #FECD70; font-family: 'Rajdhani', sans-serif; font-size: 20px; font-weight: bold; 
                  color: white; margin-top: 5px;" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                  </div>
                </div>
              </div>
            </div>
          }
        </div>
      </div>
    </div>
  </div>
</div>