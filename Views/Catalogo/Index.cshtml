@model IEnumerable<HeladeriaTAMS.Models.Producto>
@{
    ViewData["Title"] = "Catalogo";  
}

<h1>@ViewData["Title"]</h1>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="375" height="250"
                       src="/images/@item.ImageName" alt="@item.ImageName"  />
                  </div>
                </div>
                <div class="card-body" style="text-align: center;">
                  <h4 class="card-title" >@Html.DisplayFor(modelItem => item.Name)</h4>
                  <h5 class="card-text" style="color:#FF0000" >@Html.DisplayFor(modelItem => item.Precio)</h5>
                  <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.Id">Add</a>
                  <a class="btn btn-info"  asp-action="Details" asp-route-id="@item.Id">View</a>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>