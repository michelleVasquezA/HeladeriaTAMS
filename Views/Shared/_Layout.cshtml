<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] HeladeriaTAMS</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HeladeriaTAMS.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">

                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="txt-logo" src="/images/Logo txt 1 Paleta.png">
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item buscador">
                            <form asp-controller="Catalogo" asp-action="Index" class="d-flex">
                                <input class="form-control rounded-pill" type="text" name="searchString"
                                    placeholder="Buscar" style="padding-left: 20px;">
                            </form>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'Rajdhani', sans-serif; font-size: 17px; margin: 0 4px; color: #E38B29;"
                                class="nav-link" asp-area="" asp-controller="Home"
                                asp-action="Index"><strong>HOME</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i style="font-size:5px; color: white;" class="fa">&#xf111;</i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'Rajdhani', sans-serif; font-size: 17px; margin: 0 4px; color: #E38B29;"
                                class="nav-link" asp-area="" asp-controller="Home"
                                asp-action="Local"><strong>LOCALES</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i style="font-size:5px; color: white;" class="fa">&#xf111;</i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'Rajdhani', sans-serif; font-size: 17px; margin: 0 4px; color: #E38B29;"
                                class="nav-link" asp-area="" asp-controller="Home"
                                asp-action="Privacy"><strong>NOSOTROS</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i style="font-size:5px; color: white;" class="fa">&#xf111;</i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'Rajdhani', sans-serif; font-size: 17px; margin: 0 4px; color: #E38B29;"
                                class="nav-link" asp-area="" asp-controller="Contacto"
                                asp-action="Index"><strong>CONTACTO</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i style="font-size:5px; color: white;" class="fa">&#xf111;</i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'Rajdhani', sans-serif; font-size: 17px; margin: 0 4px; color: #E38B29;"
                                class="nav-link" asp-area="" asp-controller="Catalogo"
                                asp-action="Index"><strong>CATÁLOGO</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i style="font-size:5px; color: white;" class="fa">&#xf111;</i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'Rajdhani', sans-serif; font-size: 17px; margin: 0 4px; color: #E38B29;"
                                class="nav-link" asp-area="" asp-controller="Spotify"
                                asp-action="Index"><strong>SPOTIFY</strong></a>
                        </li>
                    </ul>
                    <partial name="_MenuPartial" />
                    <partial name="_LoginPartial" />
                    <partial name="MiPartial" />
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="margin-top: 500px; bottom: 0;">
        <div class="container">
            <div class="row">
                <div class="col">
                    <img class="txt-logo-footer" src="/images/Logo txt 1 Blanco.png">
                </div>
                <div class="col">
                    <h6>CONÓCENOS</h6>
                    <p>
                        <a href="">Términos y Condiciones de Uso</a><br>
                        <a href="">Política de Privacidad</a><br>
                    </p>
                </div>
                <div class="col">
                    <h6>REDES SOCIALES</h6>
                    <p>
                        <a href="">Instagram <i class="fa-brands fa-instagram"></i></a><br>
                        <a href="">Facebook <i class="fa-brands fa-facebook"></i></a><br>
                    </p>
                </div>
                <div class="col">
                    <h6>MI CUENTA</h6>
                    <p>
                        <a href="">Iniciar Sesión</a><br>
                        <a href="">Configurar Cuenta</a><br>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/64b57b2524.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
